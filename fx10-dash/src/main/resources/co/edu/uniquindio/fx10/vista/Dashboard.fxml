<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="contenedorPrincipal" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.fx10.controlador.DashboardController"
      spacing="20" style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Encabezado -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label fx:id="lblTitulo" text="Dashboard de Productos" style="-fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="28"/>
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnListado" text="Ver Listado de Productos" onAction="#mostrarListado"
                style="-fx-background-color: #6C8ED6; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 14; -fx-background-radius: 5;"/>

        <Button fx:id="btnCrearProducto" text="Crear Producto" onAction="#mostrarFormulario"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 14; -fx-background-radius: 5;"/>
    </HBox>

    <!-- Espacio informativo  -->
    <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 8, 0, 0, 2);">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Haz clic en 'Ver Listado de Productos' para abrir la tabla completa."
               style="-fx-text-fill: #34495e; -fx-font-size: 14px;"/>
    </VBox>

</VBox>
